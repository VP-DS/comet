{
    "name": "root",
    "license": "BSD-2-Clause",
    "workspaces": [
        "packages/*"
    ],
    "private": true,
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "build": "lerna run build --stream",
        "start": "lerna run --stream --no-sort --concurrency 999 start",
        "storybook": "npm run --prefix packages/admin-stories storybook",
        "lint": "npm run lint:eslint && npm run lint:tsc",
        "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx,.json,.md packages/**/src/",
        "prelint:tsc": "npm run build",
        "lint:tsc": "lerna run lint:tsc --stream",
        "prebuild:storybook": "npm run build",
        "build:storybook": "npm --prefix packages/admin-stories run build-storybook",
        "intl:extract": "formatjs extract ./packages/**/*.ts* --out-file lang/en.json --ignore ./**.d.ts --ignore ./packages/admin-stories/**/* --format simple"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-formatjs": "^2.9.3",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "eslint-plugin-unused-imports": "^1.0.0",
        "husky": "^4.3.8",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.3",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "typescript": "^4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "engines": {
        "node": "14",
        "npm": "7"
    }
}
